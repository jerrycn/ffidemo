{
  "name": "electron-ffi-demo",
  "version": "1.0.0",
  "description": "Electron FFI 测试项目",
  "main": "main.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder build --win --publish never"
  },
  "build": {
    "appId": "com.electron.ffidemo",
    "productName": "Electron FFI Demo",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffi-napi/build/Release/",
        "to": "node_modules/ffi-napi/build/Release/",
        "filter": ["*.node"]
      },
      {
        "from": "node_modules/ref-napi/build/Release/",
        "to": "node_modules/ref-napi/build/Release/",
        "filter": ["*.node"]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/ffi-napi/build/Release/*.node",
      "node_modules/ref-napi/build/Release/*.node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jerrycn/ffidemo.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jerrycn/ffidemo/issues"
  },
  "homepage": "https://github.com/jerrycn/ffidemo#readme",
  "dependencies": {
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^25.1.1",
    "electron-builder": "^24.9.1"
  }
}
